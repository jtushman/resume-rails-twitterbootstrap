<div id="resume">
<h1>Curriculum Vitae</h1>

<ul class="nav nav-pills" id="resumeNav">
  <li class="active"><a href="#work" data-toggle="tab">Work</a></li>
  <li><a href="#education" data-toggle="tab">Education</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane fade in active" id="work">

    <%@work_items.each do |work_item| %>
        <hr>
        <div class="row">
          <div class="span4">
            <%= link_to image_tag(work_item['logo']), work_item['url'] %>
          </div>
          <div class="span5">
            <h3><%= work_item['company'] %> <small><%= work_item['title'] %></small></h3>
            <span class='years'><%= work_item['years'] %></span>
            <%= raw Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(work_item['description']) %>
          </div>
        </div>
    <% end %>

  </div>
  <div class="tab-pane fade" id="education">
    <%@school_items.each do |school_item| %>
        <hr>
        <div class="row">
          <div class="span4">
            <%= link_to image_tag(school_item['logo'], width: 240), school_item['url'] %>
          </div>
          <div class="span5">
            <h3><%= school_item['school'] %> </h3>

            <p><%= school_item['degree'] %>, Class of <%= school_item['class'] %></p>
          </div>
        </div>

    <% end %>
  </div>
</div>
</div>